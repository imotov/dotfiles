#!/bin/sh

cp -R ~/.dotfiles/bin ~/
cp -R ~/.dotfiles/.MacOSX ~/

cp -f ~/.dotfiles/.zshrc ~/
cp -f ~/.dotfiles/.tmux.conf ~/
cp -f ~/.dotfiles/.oh-my-zsh/custom/*.zsh ~/.oh-my-zsh/custom/
cp -f ~/.dotfiles/.oh-my-zsh/themes/imotov.zsh-theme ~/.oh-my-zsh/themes/
mkdir -p ~/Library/Preferences/IntelliJIdea14/
cp -f ~/.dotfiles/idea/* ~/Library/Preferences/IntelliJIdea14/

# Mac OSX specific part
OS=$(uname)
if [ $OS = "Darwin" ]; then
    cp -f ~/.dotfiles/.gitconfig.osx ~/.gitconfig
else
    cp -f ~/.dotfiles/.gitconfig ~/
fi
