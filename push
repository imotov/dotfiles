#!/bin/sh

cp -R ~/.dotfiles/bin ~/

cp -f ~/.dotfiles/zshrc ~/.zshrc
cp -f ~/.dotfiles/tmux.conf ~/.tmux.conf
cp -f ~/.dotfiles/oh-my-zsh/custom/*.zsh ~/.oh-my-zsh/custom/
cp -f ~/.dotfiles/oh-my-zsh/themes/imotov.zsh-theme ~/.oh-my-zsh/themes/

# Mac OSX specific part
OS=$(uname)
if [ $OS = "Darwin" ]; then
    mkdir -p ~/.MacOSX/
    cp -f ~/.dotfiles/MacOSX/* ~/.MacOSX/
    cp -f ~/.dotfiles/gitconfig.osx ~/.gitconfig
    mkdir -p ~/Library/Preferences/IntelliJIdea2017.2/
    cp -f ~/.dotfiles/idea/* ~/Library/Preferences/IntelliJIdea2017.2/
else
    cp -f ~/.dotfiles/gitconfig ~/.gitconfig
fi
