#!/bin/sh

# bin scripts
cp -f -p -rv ~/bin .

# zsh files
cp -f -p -v ~/.zshrc ./zshrc
cp -f -p -v ~/.tmux.conf ./tmux.conf
mkdir -p oh-my-zsh/custom
mkdir -p oh-my-zsh/themes
cp -f -p -v ~/.oh-my-zsh/custom/*.zsh oh-my-zsh/custom/
cp -f -p -v ~/.oh-my-zsh/themes/imotov.zsh-theme oh-my-zsh/themes/

# atom files
cp -f -p -v ~/.atom/*.cson ~/.atom/*.coffee ~/.atom/*.less ./atom 2>&1 | grep -v 'not copied'

# Mac OSX specific part
OS=$(uname)
if [ $OS = "Darwin" ]; then
    cp -f -p -v ~/.gitconfig  ./gitconfig.osx

    # other files
    cp -f -p -rv ~/.MacOSX/* ./MacOSX

    # copy idea.properties and idea.vmoptions files
    cp -f -p -v ~/Library/Preferences/IntelliJIdea2017.3/idea.* idea/

else
    cp -f -p -v ~/.gitconfig ./gitconfig
fi
